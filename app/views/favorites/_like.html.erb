<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <p><i class="fas fa-heart heart_red"></i><%= book.favorites.count %></p>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true  do %>
    <p><i class="fas fa-heart heart_blue"></i><%= book.favorites.count %></p>
  <% end %>
<% end %>